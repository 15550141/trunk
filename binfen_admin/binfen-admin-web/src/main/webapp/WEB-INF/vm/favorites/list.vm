<DIV id="navBar" title="favorites">
	<li><a href="$!{contextPath}/">首页</a><span class="divider">/</span></li>
	<li class="active">favorites</li>
</DIV>
<form class="well form-search" name="favoritesListForm" action="/favorites" method="POST">
	<!-- 智能分页与排序 -->
	<input type="hidden" name="currentPage" value="$!{page.currentPage}"/>
	<input type="hidden" name="pageSize" value="$!{page.pageSize}"/>
	<input type="hidden" name="orderField" value="$!{favorites.orderField}"/>
	<input type="hidden" name="orderFieldType" value="$!{favorites.orderFieldType}"/>
	<!-- 查询条件 -->
	<input class="span2" type="text" name="favoritesId" value="$!{favorites.favoritesId}" placeholder="favoritesId"/>
	<input class="span2" type="text" name="userId" value="$!{favorites.userId}" placeholder="userId"/>
	<input class="span2" type="text" name="itemId" value="$!{favorites.itemId}" placeholder="itemId"/>
	<button type="submit" class="btn"><i class="icon-search"></i>搜索</button>
	<!-- 新增按钮 -->
	<div class="btn-group pull-right">
		<a class="btn" onclick="XUI.window.open('/favorites/0',null,'PUT',{title:$(this).text()})"><i class="icon-pencil"></i>新增</a>
	</div>
</form>

<!-- 表格数据 -->
<table class="table table-striped table-bordered table-condensed grid">
	<thead>
		<tr>
			<th #sorting($!{favorites} "favoritesId")>favoritesId</th>
			<th #sorting($!{favorites} "userId")>userId</th>
			<th #sorting($!{favorites} "itemId")>itemId</th>
			<th #sorting($!{favorites} "created")>created</th>
			<th #sorting($!{favorites} "modified")>modified</th>
			<th>操作</th>
		</tr>
	</thead>
	<tbody>
#foreach(${item} in ${page.result})
		<tr>
			<td>$!{item.favoritesId}</td>
			<td>$!{item.userId}</td>
			<td>$!{item.itemId}</td>
			<td>$!{item.created}</td>
			<td>$!{item.modified}</td>
			<td class="textC">
				<div class="btn-group">
					<a class="btn btn-mini" onclick="XUI.ajax.delete('/favorites/${item.favoritesId}',null,{refresh:true})"><i class="icon-trash"></i> 删除</a>
					<a class="btn btn-mini" onclick="XUI.window.open('/favorites/${item.favoritesId}',null,'PUT',{title:$(this).text()})"><i class="icon-pencil"></i> 修改</a>
					<a class="btn btn-mini" onclick="XUI.window.open('/favorites/${item.favoritesId}',null,'GET',{title:$(this).text()})"><i class="icon-eye-open"></i> 查看</a>
				</div>
			</td>
		</tr>
#end
	</tbody>
</table>
<!-- 分页栏 -->
#showPage($!{page})