<form name="commentReplyUpdateForm" action="/commentReply/save" method="POST" data-resultType="JSON">
	<table class="table table-bordered table-striped formLayout m0">
		<tr>
			<td>id:</td>
			<td><input type="text" name="id" value="$!{commentReply.id}" placeholder="id" readonly/></td>
			<td>commentId:</td>
			<td><input type="text" name="commentId" value="$!{commentReply.commentId}" placeholder="commentId"/></td>
		</tr>
		<tr>
			<td>parentId:</td>
			<td><input type="text" name="parentId" value="$!{commentReply.parentId}" placeholder="parentId"/></td>
			<td>content:</td>
			<td><input type="text" name="content" value="$!{commentReply.content}" placeholder="content"/></td>
		</tr>
		<tr>
			<td>userId:</td>
			<td><input type="text" name="userId" value="$!{commentReply.userId}" placeholder="userId"/></td>
			<td>deleted:</td>
			<td><input type="text" name="deleted" value="$!{commentReply.deleted}" placeholder="deleted"/></td>
		</tr>
		<tr>
			<td>ip:</td>
			<td><input type="text" name="ip" value="$!{commentReply.ip}" placeholder="ip"/></td>
			<td>created:</td>
			<td><input type="text" name="created" value="$!{commentReply.created}" placeholder="created"/></td>
		</tr>
		<tr>
			<td>modified:</td>
			<td colspan="3"><input type="text" name="modified" value="$!{commentReply.modified}" placeholder="modified"/></td>
		</tr>
	</table>
</form>
<div class="bottomBar">
	<button class="btn btn-primary" onclick="$('form[name=commentReplyUpdateForm]').submit()">保存更改</button>
</div>